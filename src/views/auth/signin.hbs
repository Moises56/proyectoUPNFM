<header class="bg-image-login">
<div class="container">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <form
        action="/signin"
        method="POST"
        class="card bg-dark text-white p-4"
      >
        <h3 class="text-center my-3">
          Login
        </h3>

        <img
          src="/img/usuario.png"
          alt="Logo de usuario"
          class="card-img-top mx-auto m-2 rounded-circle w-50"
        />
        <div class="card-body">
          {{! Email }}
          <label for="username" class="fw-light fs-6 mb-2">
            Escribir su Email:
          </label>
          <input
            type="text"
            name="email"
            placeholder="youremail@mail.com"
            class="form-control mb-3"
            autofocus
          />

          <label for="password">
            Escribe su contraseña:
          </label>
          <div class="form-group">
            <input
              type="password"
              name="password"
              placeholder="contraseña"
              class="form-control mb-3"
            />
          </div>
          <button class="btn btn-primary btn-block">
            Login
          </button>
        </div>
      </form>

      {{! Link }}
      <p class="fs-5 text-center mt-3 text-light">
        ¿No tienes cuenta?
        <a href="/signup" class="text-info">
          Regístrate
        </a>
      </p>
    </div>
  </div>
</div>
  </header>